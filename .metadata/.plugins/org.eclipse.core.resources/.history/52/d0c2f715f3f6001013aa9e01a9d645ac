#ifndef INC_TYPES_H_
#define INC_TYPES_H_

/* definitions of some structures of date and time */
typedef struct
{
	uint8_t date;
	uint8_t month;
	uint8_t	year;
	uint8_t day;
}RTC_date_t;

typedef struct
{
	uint8_t seconds;
	uint8_t minutes;
	uint8_t	hours;
	uint8_t time_format;
}RTC_time_t;

typedef struct
{
	double temperature;
	double pressure;
	double humidity;

}BME280_data_t;

typedef struct
{
	char timestamp[17];
	uint8_t date, month, year;
	float temperature;
	float pressure;
	float humidity;

}meteo_msg_t;

typedef struct
{
	uint8_t prev_date;
	uint8_t	prev_month;
}prev_date_t;

typedef struct __attribute__((packed)) {
    float temperature;
    float humidity;
    float pressure;
} measurement_t;

struct tm
{
  int	tm_sec;
  int	tm_min;
  int	tm_hour;
  int	tm_mday;
  int	tm_mon;
  int	tm_year;
  int	tm_wday;
  int	tm_yday;
  int	tm_isdst;

#endif /* INC_TYPES_H_ */
